%{
#include "y.tab.h" // Include header generated by Bison
%}

%%
int         { return INT; }
float       { return FLOAT; }
char        { return CHAR; }
[a-zA-Z_][a-zA-Z0-9_]* { return ID; } // Matches variable names
[,]         { return ','; }
[;]         { return ';'; }
\n          { return NL; } // Matches newline
[ \t]+      { /* Ignore whitespace */ }
.           { printf("Unexpected character: %s\n", yytext); } // For invalid input
%%

int yywrap() {
    return 1; // Ends processing
}
